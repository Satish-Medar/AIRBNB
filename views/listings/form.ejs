<% layout("/layouts/boilerplate") %>
<body>
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1 class="mt-3">Create a New Listing</h1>
        <form
          action="/listings"
          method="post"
          class="needs-validation"
          enctype="multipart/form-data"
          novalidate
        >
          <label for="floatingInput" class="form-label">Enter Title</label>
          <div class="form-floating mb-4">
            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="listing[title]"
              placeholder="name@example.com"
              required
            />
            <label for="floatingInput">Title</label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
          </div>

          <label for="floatingTextarea2" class="form-label"
            >Enter Description</label
          >
          <div class="form-floating mb-4">
            <textarea
              class="form-control"
              name="listing[desc]"
              placeholder="Leave a comment here"
              id="floatingTextarea2"
              style="height: 100px"
              required
            ></textarea>
            <label for="floatingTextarea2">Description</label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">
              Please enter a valid Description.
            </div>
          </div>

          <label for="floatingInput4" class="form-label">Upload Image</label>

          <div class="form-floating mb-4">
            <input
              type="file"
              class="form-control"
              id="floatingInput4"
              name="listing[image]"
              accept="image/*"
              required
            />

            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please upload a valid image.</div>
          </div>

          <label for="floatingInput5" class="form-label">Enter Price</label>
          <div class="form-floating mb-4">
            <input
              type="number"
              class="form-control"
              id="floatingInput5"
              name="listing[price]"
              placeholder="name@example.com"
              required
            />
            <label for="floatingInput">Price </label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <label for="floatingInput6" class="form-label"
                >Enter Location</label
              >
              <div class="form-floating mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput6"
                  name="listing[location]"
                  placeholder="name@example.com"
                  required
                />
                <label for="floatingInput">Location </label>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                  Please enter a valid location.
                </div>
              </div>
            </div>

            <div class="col-md-8">
              <label for="floatingInput7" class="form-label"
                >Enter Country</label
              >
              <div class="form-floating mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput7"
                  name="listing[country]"
                  placeholder="name@example.com"
                  required
                />
                <label for="floatingInput">Country</label>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                  Please enter a valid country.
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <button
                type="button"
                class="btn btn-secondary w-100"
                onclick="window.location='/listings'"
              >
                Cancel
              </button>
            </div>
            <div class="col-6">
              <div class="mb-3">
                <label class="form-label">Category</label>
                <select
                  class="form-select mb-2"
                  name="listing[category]"
                  required
                >
                  <option value="Rooms">Rooms</option>
                  <option value="Iconic Cities">Iconic Cities</option>
                  <option value="Mountains">Mountains</option>
                  <option value="Castles">Castles</option>
                  <option value="Arctic">Arctic</option>
                  <option value="Camping">Camping</option>
                  <option value="Farms">Farms</option>
                  <option value="Pools">Pools</option>
                  <option value="Domes">Domes</option>
                  <option value="Boats">Boats</option>
                  <option value="Trending">Trending</option>
                </select>
                <button type="submit" class="btn btn-success w-100">
                  Submit
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
