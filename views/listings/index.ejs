<% layout('/layouts/boilerplate') %>

<div class="listing-grid">
  <% for (let listing of allListings) { %> <% // Calculate average rating let
  avgRating = 0; if (listing.reviews && listing.reviews.length > 0) { let total
  = 0; listing.reviews.forEach(r => total += r.rating); avgRating = (total /
  listing.reviews.length).toFixed(1); } %>

  <div class="listing-card">
    <div class="listing-img-wrapper">
      <img
        src="<%= listing.image.url %>"
        alt="listing_image"
        class="listing-img"
      />
      <button class="wishlist-btn">‚ù§Ô∏è</button>
    </div>

    <div class="listing-content">
      <h3 class="listing-title"><%= listing.title %></h3>

      <div class="listing-meta">
        <span class="location"
          >üìç <%= listing.location %>, <%= listing.country %></span
        >
        <span class="category">üè° <%= listing.category %></span>
      </div>

      <% if (listing.owner) { %>
      <p class="owner">üèòÔ∏è Owner: <%= listing.owner.username %></p>
      <% } %> <% if (avgRating > 0) { %>
      <p class="rating">‚≠ê <%= avgRating %> (<%= listing.reviews.length %>)</p>
      <% } else { %>
      <p class="rating">‚≠ê No ratings</p>
      <% } %>

      <p class="price">
        ‚Çπ <%= listing.price.toLocaleString("en-IN") %> / night
      </p>

      <p class="desc"><%= listing.desc.substring(0, 80) %>...</p>

      <a href="/listings/<%= listing._id %>" class="view-btn">View Details</a>
    </div>
  </div>

  <% } %>
</div>

<style>
  /* Grid layout */
  .listing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    padding: 20px;
  }

  /* Card */
  .listing-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .listing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  /* Image wrapper */
  .listing-img-wrapper {
    position: relative;
  }

  .listing-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  /* Wishlist button */
  .wishlist-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: white;
    border: none;
    padding: 8px 10px;
    border-radius: 50%;
    font-size: 18px;
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition: 0.2s;
  }

  .wishlist-btn:hover {
    background: #ffefef;
  }

  /* Content */
  .listing-content {
    padding: 14px 18px;
  }

  .listing-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 6px;
  }

  .listing-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 6px;
    font-size: 14px;
    color: #555;
  }

  .owner {
    font-size: 14px;
    color: #555;
    margin-bottom: 3px;
  }

  .rating {
    font-size: 14px;
    margin-bottom: 8px;
  }

  .price {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 6px;
  }

  .desc {
    font-size: 14px;
    color: #666;
    margin-bottom: 12px;
  }

  .view-btn {
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 10px;
    background: #ff385c;
    color: white;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    transition: 0.2s;
  }

  .view-btn:hover {
    background: #e03150;
  }
</style>
