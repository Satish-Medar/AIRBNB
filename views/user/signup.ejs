<% layout("/layouts/boilerplate") %>

<body>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <h1 class="mt-3">Sign Up</h1>

        <form action="/signup" method="post" class="needs-validation" novalidate>

          <!-- Username -->
          <label for="floatingInput" class="form-label">Username</label>
          <div class="form-floating mb-4">
            <input
              type="text"
              class="form-control"
              id="floatingInput"
              name="username"
              placeholder="Enter your username"
              required
            />
            <label for="floatingInput">Enter Username</label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid username.</div>
          </div>

          <!-- Email -->
          <label for="floatingInput2" class="form-label">Email Address</label>
          <div class="form-floating mb-4">
            <input
              type="email"
              class="form-control"
              id="floatingInput2"
              name="email"
              placeholder="Enter your email"
              required
            />
            <label for="floatingInput2">Enter Email Address</label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>

          <!-- Password -->
          <label for="floatingInput3" class="form-label">Password</label>
          <div class="form-floating mb-4">
            <input
              type="password"
              class="form-control"
              id="floatingInput3"
              name="password"
              placeholder="Enter your password"
              required
            />
            <label for="floatingInput3">Enter Password</label>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid password.</div>
          </div>

          <button type="submit" class="btn btn-primary mb-3">Sign Up</button>

        </form>

      </div>
    </div>
  </div>
</body>
